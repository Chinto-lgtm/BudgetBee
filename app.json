{
  "expo": {
    "name": "BudgetBee: Halal Edition",
    "slug": "budgetbee-halal",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.budgetbee"
    },
    "android": {
      "package": "com.yourname.budgetbee",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to verify completed tasks.",
          "cameraPermission": "The app needs camera access to verify completed tasks via AI."
        }
      ]
    ]
  }
}